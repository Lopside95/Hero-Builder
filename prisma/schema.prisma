datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
  pic   String
}

model Hero {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  damage    String
  speed     String
  img       String
  bootsImg  String
  weaponImg String
}

model Boots {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  // bootsId     String @db.ObjectId
  name        String
  moveSpeed   Int
  description String?
  cost        Int
  url         String
  FinalHero   FinalHero[]
}

model Weapon {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  // weaponId    String @db.ObjectId
  name        String
  damage      Int
  description String?
  cost        Int
  url         String
  FinalHero   FinalHero[]
}

model HeroDetails {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  totalMS    String
  totalDmg   String
  name       String
  profilePic String
  // bootsId    String @db.ObjectId
  // weaponId   String @db.ObjectId
  // boots      Boots  @relation(fields: [bootsId], references: [id])
  // weapon     Weapon @relation(fields: [weaponId], references: [id])
  // Boots      Boots?  @relation(fields: [bootsId], references: [id])
  // bootsId    String? @db.ObjectId
  // Weapon     Weapon? @relation(fields: [weaponId], references: [id])
  // weaponId   String? @db.ObjectId
  FinalHero  FinalHero[]
}

model FinalHero {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  bootsId   String      @db.ObjectId
  weaponId  String      @db.ObjectId
  detailsId String      @db.ObjectId
  boots     Boots       @relation(fields: [bootsId], references: [id])
  weapon    Weapon      @relation(fields: [weaponId], references: [id])
  details   HeroDetails @relation(fields: [detailsId], references: [id])
}

