datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt DateTime    @updatedAt
  createdAt DateTime    @default(now())
  userName  String
  email     String      @unique
  password  String
  pic       String
  FinalHero FinalHero[]
}

model Boots {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  speed       Int
  bonus       String
  description String
  cost        Int
  img         String
}

model Weapon {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  damage      Int
  bonus       String
  description String
  cost        Int
  img         String
}

model FinalHero {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt DateTime    @updatedAt
  createdAt DateTime    @default(now())
  details   DetailsType
  boots     BootsType
  weapon    WeaponType
  gold      Int
  userId    String      @db.ObjectId
  user      User        @relation(fields: [userId], references: [id])
}

model HeroImages {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  url String
}

type DetailsType {
  speed  Int
  damage Int
  name   String
  img    String
  story  String
}

type BootsType {
  name        String
  speed       Int
  bonus       String
  description String
  cost        Int
  img         String
}

type WeaponType {
  name        String
  damage      Int
  bonus       String
  description String
  cost        Int
  img         String
}
